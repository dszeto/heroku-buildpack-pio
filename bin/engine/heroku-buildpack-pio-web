#!/bin/bash

# Fail immediately on non-zero exit code.
set -e

eval "cd pio-engine/ && pio deploy --port $PORT --event-server-ip $PIO_EVENTSERVER_IP --event-server-port $PIO_EVENTSERVER_PORT --accesskey $ACCESS_KEY ${PIO_OPTS:-} -- --driver-class-path /app/lib/postgresql_jdbc.jar ${PIO_SPARK_OPTS:-}"
